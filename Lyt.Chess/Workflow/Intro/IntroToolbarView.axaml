<UserControl 
	x:Class="Lyt.Chess.Workflow.Intro.IntroToolbarView"
	xmlns:vm="clr-namespace:Lyt.Chess.Workflow.Intro"
	x:DataType="vm:IntroToolbarViewModel" 

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="72"

	xmlns:controls="clr-namespace:Lyt.Chess.Controls"
	xmlns:glyphs="clr-namespace:Lyt.Avalonia.Controls.Glyphs;assembly=Lyt.Avalonia.Controls"
	>	
	<!-- View Selector - Main toolbar - Aligned left -->
	<StackPanel
		Orientation="Horizontal"
		Margin="0 0 0 0"
		HorizontalAlignment="Left"
		Height="72"
		>
		<glyphs:GlyphButton
			Style="{StaticResource AppToolbarIconButton}"
			Width="360" 
			BackgroundMargin="154" 
			GlyphSource="next"
			GlyphStrokeThickness="0"
			Text="{DynamicResource Intro.AgreeMIT}"
			Command="{Binding OnNext}"
	    	/>
	</StackPanel>

</UserControl>