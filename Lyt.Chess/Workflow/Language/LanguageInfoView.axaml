<UserControl 
	x:Class="Lyt.Chess.Workflow.Language.LanguageInfoView"
	xmlns:vm="clr-namespace:Lyt.Chess.Workflow.Language"
	x:DataType="vm:LanguageInfoViewModel" 
	
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	>
	<Grid
		Height="64"
		>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="220" />
			<ColumnDefinition Width="60" />
			<ColumnDefinition Width="20" />
			<ColumnDefinition Width="60" />
		</Grid.ColumnDefinitions>
		<TextBlock
			Grid.Column="0" Grid.ColumnSpan="2"
			Margin="4"
			Text="{Binding Name}"
			Theme="{StaticResource Data}"
			/>
		<Image
			Grid.Column="1"
			Stretch="Uniform"
			Width="54"
			Source="{Binding FlagOne}"
			/>
		<Image
			Grid.Column="3"
			Stretch="Uniform"
			Width="54"
			Source="{Binding FlagTwo}"
			/>
	</Grid>
</UserControl>
