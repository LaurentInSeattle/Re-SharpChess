<UserControl 
	x:Class="Lyt.Chess.Workflow.Setup.SetupToolbarView"
	xmlns:vm="clr-namespace:Lyt.Chess.Workflow.Setup"
	x:DataType="vm:SetupToolbarViewModel" 

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="72"
	xmlns:glyphs="clr-namespace:Lyt.Avalonia.Controls.Glyphs;assembly=Lyt.Avalonia.Controls"
	xmlns:interactions="using:Lyt.Avalonia.Mvvm.Behaviors"
	>	
	<!-- View Selector - Main toolbar - Aligned left -->
	<StackPanel
		Orientation="Horizontal"
		Margin="0 0 0 0"
		HorizontalAlignment="Left"
		Height="72"
		>
		<glyphs:GlyphButton
			Style="{StaticResource AppToolbarIconButton}"
			GlyphSource="delete"
			Text="{DynamicResource Collection.Remove}"
			Command="{Binding OnRemoveFromCollection}"
			GlyphStrokeThickness="0"
			/>
	</StackPanel>

</UserControl>